<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_card_cardview"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    app:cardCornerRadius="@dimen/padding_8dp"
    app:contentPadding="@dimen/padding_8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/news_card_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_card_image"
            android:layout_alignParentStart="true"
            android:paddingEnd="@dimen/padding_4dp"
            android:paddingBottom="@dimen/padding_4dp"
            android:text="@string/loading_place_holder"
            android:textAllCaps="true"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/news_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_card_category"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:lines="2"
            android:paddingEnd="@dimen/padding_4dp"
            android:paddingBottom="@dimen/padding_4dp"
            android:text="@string/loading_place_holder"
            android:textColor="@color/text_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_card_text_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/news_card_date"
            android:layout_below="@id/news_card_title"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:lines="3"
            android:paddingEnd="@dimen/padding_4dp"
            android:paddingBottom="@dimen/padding_4dp"
            android:text="@string/loading_place_holder"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/news_card_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="@string/loading_place_holder" />

        <ImageView
            android:id="@+id/news_card_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"

            tools:src="@tools:sample/avatars" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>